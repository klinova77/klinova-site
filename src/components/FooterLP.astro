---
// src/components/FooterLanding.astro
import Button from '~/components/UI/Button.astro'; // adapte le chemin si besoin
import { LINKS, withUtm } from '~/lib/links';

interface Props {
  service?: string;   // ex: "nettoyage de moquettes"
  ctaText?: string;   // ex: "Devis gratuit sous 24h"
  ctaHref?: string;   // ex: LINKS.devisForm
}

const {
  service = "",
  ctaText = "Devis gratuit sous 24h",
  ctaHref = withUtm(LINKS.devisForm, { source: "footer_lp", content: "cta-devis" }),
} = Astro.props;
---

<footer class="bg-[#1E2939] text-white">
  <div class="container-responsive">

    <!-- Section CTA finale -->
    <div class="py-8 lg:py-12 text-center border-b border-gray-700">
      <h2 class="text-2xl lg:text-3xl font-bold mb-4">
        {service ? `Besoin d'un ${service} professionnel ?` : "Prêt à démarrer votre projet ?"}
      </h2>
      <p class="text-gray-300 mb-6 max-w-2xl mx-auto">
        Intervention rapide en Île-de-France. Devis gratuit, protocoles certifiés,
        matériel professionnel.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <!-- CTA principal -->
        <Button
          href={ctaHref}
          label={ctaText}
          variant="secondary"
          size="lg"
          tracking={{ action: 'footer-cta', source: 'footer_lp' }}
          class="gap-2 text-[#111826]"
          ariaLabel={ctaText}
        >
          {ctaText}
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4-4 4M3 12h18" />
          </svg>
        </Button>

        <!-- Lien WhatsApp -->
   <Button
  href="https://wa.me/33676738661"
  label="WhatsApp"
  variant="whatsapp"
  size="lg"
  tracking={{ action: 'footer-whatsapp', source: 'footer_lp' }}
  class="gap-2 bg-[#25D366] hover:bg-[#128C7E] text-white border-0"
  ariaLabel="Contacter via WhatsApp"
  withTrackingParams={false}
>
  <svg
    class="w-5 h-5"
    fill="currentColor"
    viewBox="0 0 24 24"
    aria-hidden="true"
  >
    <path
      d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.893 3.690"
    />
  </svg>
  WhatsApp
</Button>

      </div>
    </div>

    <!-- Informations essentielles -->
    <div class="py-8">
      <div class="grid md:grid-cols-3 gap-8 text-center md:text-left">
        <div>
          <h3 class="font-semibold text-lg mb-3 text-[var(--color-action-600)]">Contact direct</h3>
          <div class="space-y-2 text-sm">
            <p class="text-gray-200">contact@klinova.fr</p>
            <p class="text-gray-400 text-xs">Disponible 7j/7 pour urgences</p>
          </div>
        </div>

        <div>
          <h3 class="font-semibold text-lg mb-3 text-[var(--color-action-600)]">Zone d'intervention</h3>
          <div class="space-y-1 text-sm text-gray-200">
            <p>Paris (tous arrondissements)</p>
            <p>Petite couronne (92, 93, 94)</p>
            <p class="text-gray-400 text-xs">Devis possible grande couronne</p>
          </div>
        </div>

        <div>
          <h3 class="font-semibold text-lg mb-3 text-[var(--color-action-600)]">Nos garanties</h3>
          <div class="space-y-1 text-sm text-gray-200">
            <p>✓ Devis gratuit sous 24h</p>
            <p>✓ Équipements professionnels</p>
            <p>✓ Protocoles certifiés</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Barre légale -->
    <div class="border-t border-gray-700 py-4">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 text-xs text-gray-400">
        <div class="flex items-center gap-3">
          <span class="font-semibold text-white">Klinova</span>
          <span>© {new Date().getFullYear()}</span>
          <span>SIRET : 943 439 810</span>
        </div>

        <div class="flex items-center gap-3">
          <a href="/mentions-legales" class="hover:text-[var(--color-action-600)] transition-colors">Mentions légales</a>
          <span>•</span>
          <a href="/politique-de-confidentialite" class="hover:text-[var(--color-action-600)] transition-colors">Confidentialité</a>
        </div>
      </div>
    </div>

  </div>
</footer>
