---
// src/components/Footer.astro
import { LINKS, withUtm, PHONE_DISPLAY } from '~/lib/links';
---

<footer class="bg-[#1E2939] text-white">
  <div class="container-responsive">
    <!-- Contenu principal -->
    <div class="py-12 lg:py-16">
      <div class="grid lg:grid-cols-4 gap-8 lg:gap-12">

        <!-- Colonne 1: Logo + Mission + contact -->
        <div class="lg:col-span-2">
          <a href={LINKS.home} class="inline-flex items-center gap-3 mb-6 group">
            <div class="w-10 h-10 rounded-lg bg-gradient-to-br from-[var(--color-action-600)] to-[color-mix(in srgb, var(--color-action-600) 85%, #000)] flex items-center justify-center">
              <span class="text-white font-bold text-lg">K</span>
            </div>
            <span class="font-bold text-2xl text-white group-hover:text-[var(--color-action-600)] transition-colors">
              Klinova
            </span>
          </a>

          <p class="text-gray-300 mb-6 max-w-md leading-relaxed">
            Nettoyage professionnel en Île-de-France. Équipements industriels,
            protocoles maîtrisés, approche responsable.
          </p>

          <!-- Contact principal avec aria-labels -->
          <div class="space-y-3">
            <a
              href={LINKS.phone}
              aria-label={`Appeler Klinova au ${PHONE_DISPLAY}`}
              class="flex items-center gap-3 text-[var(--color-action-600)] hover:opacity-90 transition-colors group focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-action-600)] rounded"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <span class="font-medium">{PHONE_DISPLAY}</span>
            </a>

            <a
              href={`mailto:${LINKS.email ?? 'contact@klinova.fr'}`}
              aria-label="Écrire à Klinova par e-mail"
              class="flex items-center gap-3 text-gray-300 hover:text-[var(--color-action-600)] transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-[var(--color-action-600)] rounded"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              <span>{LINKS.email ?? 'contact@klinova.fr'}</span>
            </a>
          </div>

          <!-- Bloc adresse NAP -->
          <address class="not-italic mt-6 text-sm text-gray-300 leading-relaxed">
            <div class="font-medium text-white">KLINOVA</div>
            <div>6 rue d’Armaillé, 75017 Paris</div>
            <div>SIREN 943 439 810 — RCS Paris</div>
            <div class="mt-1">Ouvert : <time dateTime="Mo-Su 08:00-20:00">Lun-Dim 08:00–20:00</time></div>
          </address>
        </div>

        <!-- Colonne 2: Services -->
        <div>
          <h3 class="font-semibold text-lg mb-4 text-white">Services</h3>
          <ul class="space-y-3 text-sm">
            <li><a href="/nettoyage-moquettes" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Nettoyage moquettes</a></li>
            <li><a href="/nettoyage-parkings" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Nettoyage parkings</a></li>
            <li><a href="/nettoyage-balcons" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Balcons & fientes</a></li>

            <!-- En attente de mise en ligne -->
            <!-- <li><a href="/nettoyage-textiles" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Nettoyages de textiles</a></li> -->
            <!-- <li><a href="/nettoyage-terrasses" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Nettoyage terrasses</a></li> -->
            <!-- <li><a href="/traitement-nuisibles" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Traitement nuisibles</a></li> -->
            <!-- <li><a href="/autres-services" class="text-gray-400 hover:text-[var(--color-action-600)] transition-colors text-xs">Autres prestations</a></li> -->
          </ul>
        </div>

        <!-- Colonne 3: Entreprise -->
        <div>
          <h3 class="font-semibold text-lg mb-4 text-white">Entreprise</h3>
          <ul class="space-y-3 text-sm">
            <li><a href="/a-propos" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">À propos</a></li>
            <!-- <li><a href="/avance-immediate" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Avance immédiate</a></li> -->
            <li><a href="/references" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Références</a></li>
            <li><a href="/contact" class="text-gray-300 hover:text-[var(--color-action-600)] transition-colors">Contact</a></li>
            <li>
              <span class="text-gray-400 text-xs">Zone d'intervention</span>
              <div class="text-gray-300 text-xs mt-1">Paris & Île-de-France</div>
            </li>
          </ul>
        </div>

      </div>
    </div>

    <!-- Barre du bas -->
    <div class="border-t border-gray-700 py-6">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <!-- Copyright -->
        <div class="text-sm text-gray-400">
          © {new Date().getFullYear()} Klinova — Nettoyage professionnel IDF
        </div>

        <!-- Liens légaux -->
        <div class="flex flex-wrap items-center gap-4 text-xs text-gray-400">
          <a href={withUtm('/politique-de-confidentialite', { source: 'footer' })} class="hover:text-[var(--color-action-600)] transition-colors">Confidentialité</a>
          <span class="text-gray-600">•</span>
          <a href={withUtm('/cgv', { source: 'footer' })} class="hover:text-[var(--color-action-600)] transition-colors">CGV</a>
          <span class="text-gray-600">•</span>
          <a href={withUtm('/mentions-legales', { source: 'footer' })} class="hover:text-[var(--color-action-600)] transition-colors">Mentions légales</a>
        </div>
      </div>
    </div>
  </div>
</footer>
