<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.getElementById('formulaire-urgence');
  const submitBtn = document.getElementById('submit-btn');
  const btnText = document.getElementById('btn-text');
  const messageDiv = document.getElementById('form-message');
  const photosInput = document.getElementById('photos');
  const photosPreview = document.getElementById('photos-preview');
  const uploadErrors = document.getElementById('upload-errors');
  
  let selectedFiles = [];
  const maxFiles = 5;
  const maxSize = 5 * 1024 * 1024; // 5MB

  // Gestion upload photos
  if (photosInput) {
    photosInput.addEventListener('change', handlePhotoSelection);
    
    // Drag & drop
    const dropZone = photosInput.parentElement.querySelector('label');
    dropZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      dropZone.classList.add('bg-[#EBF8FF]');
    });
    
    dropZone.addEventListener('dragleave', (e) => {
      e.preventDefault();
      dropZone.classList.remove('bg-[#EBF8FF]');
    });
    
    dropZone.addEventListener('drop', (e) => {
      e.preventDefault();
      dropZone.classList.remove('bg-[#EBF8FF]');
      const files = Array.from(e.dataTransfer.files);
      handlePhotoFiles(files);
    });
  }

  function handlePhotoSelection(e) {
    const files = Array.from(e.target.files);
    handlePhotoFiles(files);
  }

  function handlePhotoFiles(files) {
    uploadErrors.classList.add('hidden');
    uploadErrors.textContent = '';
    
    const validFiles = [];
    const errors = [];
    
    for (const file of files) {
      if (selectedFiles.length + validFiles.length >= maxFiles) {
        errors.push(`Maximum ${maxFiles} photos autoris√©es`);
        break;
      }
      
      if (!file.type.match(/^image\/(jpeg|png|webp)$/)) {
        errors.push(`${file.name}: format non support√©`);
        continue;
      }
      
      if (file.size > maxSize) {
        errors.push(`${file.name}: taille trop importante (max 5MB)`);
        continue;
      }
      
      validFiles.push(file);
    }
    
    if (errors.length > 0) {
      uploadErrors.textContent = errors.join(', ');
      uploadErrors.classList.remove('hidden');
    }
    
    selectedFiles = [...selectedFiles, ...validFiles];
    updatePhotosPreview();
  }

  function updatePhotosPreview() {
    if (selectedFiles.length === 0) {
      photosPreview.classList.add('hidden');
      return;
    }
    
    photosPreview.classList.remove('hidden');
    photosPreview.innerHTML = '';
    
    selectedFiles.forEach((file, index) => {
      const div = document.createElement('div');
      div.className = 'relative group';
      
      const img = document.createElement('img');
      img.className = 'w-full h-20 object-cover rounded-lg border border-[#E5E7EB]';
      img.src = URL.createObjectURL(file);
      
      const deleteBtn = document.createElement('button');
      deleteBtn.type = 'button';
      deleteBtn.className = 'absolute -top-2 -right-2 w-6 h-6 bg-[#DC2626] text-white rounded-full text-xs hover:bg-[#B91C1C] transition-colors';
      deleteBtn.innerHTML = '√ó';
      deleteBtn.onclick = () => removePhoto(index);
      
      div.appendChild(img);
      div.appendChild(deleteBtn);
      photosPreview.appendChild(div);
    });
  }

  function removePhoto(index) {
    selectedFiles.splice(index, 1);
    updatePhotosPreview();
  }

  // Upload vers Cloudinary
  async function uploadToCloudinary(file) {
    const formData = new FormData();
    formData.append('file', file);
    formData.append('upload_preset', 'klinova_contact'); // √Ä configurer dans Cloudinary
    
    try {
      const response = await fetch('https://api.cloudinary.com/v1_1/YOUR_CLOUD_NAME/image/upload', {
        method: 'POST',
        body: formData
      });
      
      if (!response.ok) throw new Error('Upload failed');
      
      const data = await response.json();
      return data.secure_url;
    } catch (error) {
      console.error('Upload error:', error);
      return null;
    }
  }

  // Soumission formulaire
  if (form) {
    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      submitBtn.disabled = true;
      btnText.textContent = 'Envoi en cours...';
      messageDiv.className = 'hidden';

      try {
        const formData = new FormData(form);
        
        // Upload photos vers Cloudinary
        if (selectedFiles.length > 0) {
          btnText.textContent = 'Upload des photos...';
          const photoUrls = [];
          
          for (const file of selectedFiles) {
            const url = await uploadToCloudinary(file);
            if (url) photoUrls.push(url);
          }
          
          // Ajouter les URLs au FormData
          photoUrls.forEach(url => formData.append('photos[]', url));
        }
        
        btnText.textContent = 'Envoi du message...';
        
        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData,
          headers: {
            'Accept': 'application/json'
          }
        });

        if (response.ok) {
          messageDiv.className = 'text-center p-4 rounded-lg bg-[#DCFCE7] border border-[#16A34A] text-[#15803D]';
          messageDiv.textContent = 'Merci ! Votre demande a √©t√© envoy√©e. Nous vous recontactons sous 24h.';
          form.reset();
          selectedFiles = [];
          updatePhotosPreview();
        } else {
          const errorText = await response.text();
          messageDiv.className = 'text-center p-4 rounded-lg bg-[#FEE2E2] border border-[#DC2626] text-[#DC2626]';
          messageDiv.textContent = errorText || 'Une erreur est survenue. Veuillez r√©essayer.';
        }
      } catch (error) {
        messageDiv.className = 'text-center p-4 rounded-lg bg-[#FEE2E2] border border-[#DC2626] text-[#DC2626]';
        messageDiv.textContent = 'Erreur de connexion. Veuillez r√©essayer.';
      } finally {
        submitBtn.disabled = false;
        btnText.textContent = 'Recevoir mon devis sous 24h';
        messageDiv.classList.remove('hidden');
      }
    });
  }
});
</script>


