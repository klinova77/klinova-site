<script>
  (function () {
    const root = document.getElementById('faq-express');
    if (!root) return;

    const items = Array.from(root.querySelectorAll('details'));
    const closeOthers = (current) => {
      items.forEach(d => { if (d !== current) d.removeAttribute('open'); });
    };

    const setPanelHeight = (d) => {
      const panel = d.querySelector('[data-panel]');
      if (!panel) return;
      if (d.open) {
        // Mesure + set pour anim hauteur
        panel.style.maxHeight = panel.scrollHeight + 'px';
        panel.style.opacity = '1';
      } else {
        panel.style.maxHeight = '0px';
        panel.style.opacity = '0.98';
      }
    };

    // Init (hauteur correcte si un item est pré-ouvert)
    items.forEach(d => setPanelHeight(d));

    // Toggle + fermeture auto des autres
    items.forEach(d => {
      d.addEventListener('toggle', () => {
        if (d.open) closeOthers(d);
        setPanelHeight(d);
        // Ancre propre
        history.replaceState(null, '', '#' + d.id);
      }, { passive: true });
      // Améliore la surface cliquable via clavier
      const summary = d.querySelector('summary');
      summary && summary.setAttribute('aria-controls', d.id);
    });

    // Deep-link : ouvrir l’item ciblé par l’ancre
    const openByHash = () => {
      const id = (location.hash || '').replace('#', '');
      if (!id) return;
      const target = root.querySelector('details#' + CSS.escape(id));
      if (target) {
        target.setAttribute('open', '');
        closeOthers(target);
        setPanelHeight(target);
        // Scroll doux vers l’item
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    };
    openByHash();
    window.addEventListener('hashchange', openByHash, { passive: true });

    // Recalcule la hauteur si la fenêtre change (éviter cut-off)
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        items.forEach(d => { if (d.open) setPanelHeight(d); });
      }, 120);
    }, { passive: true });
  })();
</script>



