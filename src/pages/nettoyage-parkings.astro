<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('parking-form') as HTMLFormElement;
    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
    const btnText = document.getElementById('btn-text') as HTMLSpanElement;
    const messageDiv = document.getElementById('form-message') as HTMLDivElement;

    if (form) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();

        // État de chargement
        submitBtn.disabled = true;
        btnText.textContent = 'Envoi en cours...';
        messageDiv.className = 'hidden';

        try {
          const formData = new FormData(form);
          const response = await fetch('/api/contact', {
            method: 'POST',
            body: formData,
            headers: {
              'Accept': 'application/json'
            }
          });

          if (response.ok) {
            // Succès
            messageDiv.className = 'text-center p-4 rounded-lg bg-[#DCFCE7] border border-[#16A34A] text-[#15803D]';
            messageDiv.textContent = 'Merci ! Votre demande a été envoyée. Nous vous recontactons sous 24h.';
            form.reset();
          } else {
            // Erreur serveur
            const errorText = await response.text();
            messageDiv.className = 'text-center p-4 rounded-lg bg-[#FEE2E2] border border-[#DC2626] text-[#DC2626]';
            messageDiv.textContent = errorText || 'Une erreur est survenue. Veuillez réessayer.';
          }
        } catch (error) {
          // Erreur réseau
          messageDiv.className = 'text-center p-4 rounded-lg bg-[#FEE2E2] border border-[#DC2626] text-[#DC2626]';
          messageDiv.textContent = 'Erreur de connexion. Veuillez vérifier votre connexion internet.';
        } finally {
          // Restaurer le bouton
          submitBtn.disabled = false;
          btnText.textContent = 'Envoyer ma demande';
          messageDiv.classList.remove('hidden');
        }
      });
    }
  });
</script>

