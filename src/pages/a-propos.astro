---
// src/pages/a-propos.astro
import Layout from '../layouts/LayoutWithCTA.astro';
import { LINKS, PHONE_DISPLAY, linkAttrs } from '~/lib/links';
import Button from '~/components/UI/Button.astro';
import HeroCtaGroup from '~/components/UI/HeroCtaGroup.astro';

const phoneE164 = '+33630221228';
const phoneDisplay = '06 30 22 12 28';

// Données structurées pour le SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Stop-Punaises",
  "legalName": "KLINOVA",
  "description": "Spécialiste de l'éradication des punaises de lit à Paris et en Île-de-France",
  "url": "https://stop-punaises.fr",
  "telephone": "+33630221228",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "6 Rue d'Armaillé",
    "addressLocality": "Paris",
    "postalCode": "75017",
    "addressCountry": "FR"
  },
  "areaServed": {
    "@type": "GeoCircle",
    "geoMidpoint": {
      "@type": "GeoCoordinates",
      "latitude": 48.8566,
      "longitude": 2.3522
    },
    "geoRadius": "50000"
  },
  "serviceType": "Désinsectisation punaises de lit"
};
---

<Layout
  title="À Propos de Stop-Punaises | Expert Punaises de Lit Paris & Île-de-France"
  description="Stop-Punaises (KLINOVA) : spécialistes certifiés en éradication de punaises de lit à Paris et Île-de-France. Méthodes professionnelles, techniciens Certibiocide, garantie efficacité."
>
  <!-- JSON-LD pour le SEO local -->
  <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

  <!-- Breadcrumb -->
  <div class="bg-white border-b border-neutral-200">
    <div class="container-responsive py-4">
      <nav class="text-sm text-neutral-600" aria-label="Fil d'Ariane">
        <a href="/" class="hover:text-primary-600 transition-colors">Accueil</a>
        <span class="mx-2" aria-hidden="true">/</span>
        <span class="font-medium text-primary-600">À propos</span>
      </nav>
    </div>
  </div>

  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-white via-neutral-50 to-primary-50 py-12 lg:py-20">
    <div class="container-responsive">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Badge de confiance -->
        <div class="inline-flex items-center gap-2 bg-sp-pill border border-sp-line rounded-full px-4 py-2 mb-6">
          <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <span class="text-sm font-medium text-primary-600">Certifié Certibiocide • Agréé Ministère</span>
        </div>
        
        <h1 class="hero-title text-primary-600 mb-6">
          Qui sommes-nous ?
        </h1>
        
        <p class="hero-subtitle text-neutral-600 mb-8 max-w-3xl mx-auto">
          <strong class="text-primary-600">Stop-Punaises</strong> est une marque de <strong class="text-primary-600">KLINOVA Nettoyage</strong>, 
          spécialisée dans l'éradication professionnelle des punaises de lit à Paris et en Île-de-France.
        </p>

        <!-- CTA Hero -->
        <HeroCtaGroup 
          phoneE164={phoneE164}
          display={phoneDisplay}
          className="justify-center"
          source="about-hero"
        />
      </div>
    </div>
  </section>

  <!-- Section Présentation -->
  <section class="section-padding bg-white">
    <div class="container-responsive">
      <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <!-- Texte -->
        <div class="lg:order-2">
          <div class="inline-flex items-center gap-2 bg-sp-light border border-sp-line rounded-full px-4 py-2 mb-6">
            <svg class="w-4 h-4 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0h2m0 0h4"/>
            </svg>
            <span class="text-sm font-medium text-primary-600">SIREN 943 439 810 • RCS Paris</span>
          </div>

          <h2 class="section-title mb-6">
            Spécialistes punaises de lit, adossés à une société experte
          </h2>
          
          <div class="space-y-4 text-neutral-600">
            <p>
              <strong class="text-primary-600">Stop-Punaises</strong> concentre son savoir-faire sur l'éradication des punaises de lit 
              à Paris et en Île-de-France, en combinant <strong>vapeur sèche haute température</strong>, méthodes mécaniques 
              et biocides professionnels quand c'est nécessaire.
            </p>
            
            <p>
              L'adossement à <strong class="text-primary-600">KLINOVA Nettoyage</strong> nous apporte une culture exigeante 
              de l'hygiène, des protocoles stricts et de la traçabilité professionnelle.
            </p>
          </div>

          <!-- Informations légales -->
          <div class="bg-sp-light border-l-4 border-primary-600 p-4 rounded-r-lg mt-6">
            <p class="text-sm text-neutral-600">
              <strong class="text-primary-600">Adresse siège :</strong> 6 Rue d'Armaillé, 75017 Paris – France<br>
              <strong class="text-primary-600">Société :</strong> KLINOVA • SIREN 943 439 810 • RCS Paris
            </p>
          </div>
        </div>

        <!-- Image/Visual -->
        <div class="lg:order-1">
          <div class="relative">
            <div class="aspect-[4/3] bg-gradient-to-br from-primary-50 to-sp-light rounded-2xl shadow-soft overflow-hidden">
              <img 
                src="/images/technicien-anti-punaises-de-lit.webp" 
                alt="Technicien Stop-Punaises certifié Certibiocide en intervention"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>
            
            <!-- Badge certification -->
            <div class="absolute -bottom-4 -right-4 bg-white rounded-xl shadow-soft-lg p-4 border border-neutral-100">
              <div class="flex items-center gap-3">
                <div class="w-12 h-12 bg-success-500 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div>
                  <p class="font-semibold text-primary-600 text-sm">Certibiocide</p>
                  <p class="text-xs text-neutral-500">Certification officielle</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Section Engagements -->
  <section class="section-padding bg-sp-light">
    <div class="container-responsive">
      <div class="text-center mb-12">
        <h2 class="section-title mb-4">Nos engagements</h2>
        <p class="section-subtitle max-w-2xl mx-auto">
          Efficacité, sécurité et transparence guident chacune de nos interventions
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
        <!-- Efficacité -->
        <div class="service-card text-center">
          <div class="service-icon bg-sp-action-500 mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-primary-600 mb-3">Efficacité</h3>
          <p class="text-neutral-600 mb-4">
            Diagnostic précis, plan d'action écrit et méthodes professionnelles éprouvées pour une éradication durable.
          </p>
          <ul class="text-sm text-neutral-600 space-y-1">
            <li>• Vapeur sèche haute température</li>
            <li>• Méthodes mécaniques ciblées</li>
            <li>• Biocides professionnels si nécessaire</li>
          </ul>
        </div>

        <!-- Sécurité -->
        <div class="service-card text-center">
