---
// src/layouts/DocumentShell.astro
import '../styles/global.css';
import SeoBase, { type Props as SeoProps } from '~/components/SEO/SeoBase.astro';
import { SITE_THEME } from '~/config/theme';

export type Props = SeoProps;
const seoProps = Astro.props as SeoProps & { brand?: 'sp' | 'klinova' };
const brand = seoProps.brand ?? 'sp';
---

<!DOCTYPE html>
<html 
  lang="fr" 
  data-theme-action={SITE_THEME.action}
  data-bg-style={SITE_THEME.bgStyle}
  data-brand={brand}
>
 <head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <SeoBase {...seoProps} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <script>
    {`(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-TWMFLQ5X');`}
  </script>
</head>

  <body class="font-sans bg-neutral-50 text-primary-900">
    <!-- GTM noscript -->
    <noscript>
      <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-TWMFLQ5X" height="0" width="0" style="display:none;visibility:hidden"></iframe>
    </noscript>

    <slot />
  </body>
</html>
