---
// src/layouts/DocumentShell.astro

import '../styles/global.css';
import SeoBase, { type Props as SeoProps } from '~/components/SEO/SeoBase.astro';
import { SITE_THEME } from '~/config/theme';
import GTMHead from '~/components/analytics/GTMHead.astro';
import GTMBODYNoscript from '~/components/analytics/GTMBODYNoscript.astro';
import ConsentBanner from '~/components/consent/ConsentBanner.astro';

// Typage et fallback en cas de props manquants
export type Props = Partial<SeoProps>;
const seoProps = Astro.props as Partial<SeoProps>;
---

<!DOCTYPE html>
<html 
  lang="fr" 
  data-theme-action={SITE_THEME.action}
  data-bg-style={SITE_THEME.bgStyle}
  data-brand="klinova"
>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />

    <!-- ✅ SEO Base -->
    {typeof SeoBase === 'function' && <SeoBase {...(seoProps ?? {})} />}

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" href="/favicon.ico" sizes="48x48" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" sizes="180x180" />
    <meta name="theme-color" content="#3F8D65" />

    <!-- Preload police -->
    <link
      rel="preload"
      href="/fonts/CaviarDreams-Bold.woff2"
      as="font"
      type="font/woff2"
      crossorigin
      media="(min-width:768px)"
    />

    <!-- ✅ GTM optimisé -->
    <GTMHead />
  </head>

  <body class="font-sans bg-neutral-50 text-primary-900">
    <GTMBODYNoscript />

     <ConsentBanner />
     
    <slot />

    <!-- Script interne non bloquant -->
    <script src="/tracking-forms.js" defer></script>


  </body>
</html>